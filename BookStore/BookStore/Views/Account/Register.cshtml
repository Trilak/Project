<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Slide Login Form template Responsive, Login form web template, Flat Pricing tables, Flat Drop downs Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

    <!-- Custom Theme files -->
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <!-- //web font -->

</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <!-- main -->
        <div class="w3layouts-main">
            <div class="bg-layer">
                <h1>Registration</h1>
                <div class="header-main">
                    <div class="main-icon">
                        <span class="fa fa-eercast"></span>
                    </div>
                    <div class="header-left-bottom">

                        <div class="icon1">   
                            <center>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { placeholder = "Usernanm", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </center>
                        </div>
                        <div class="icon1">  
                            <center>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Password", autocomplete = "off", type = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </center>
                        </div>
                        <div class="icon1">
                            <center>
                                @Html.EditorFor(model => model.E_mail, new { htmlAttributes = new { placeholder = "E-mail" ,autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.E_mail, "", new { @class = "text-danger" })
                            </center>
                        </div>
                        <div class="icon1">
                            <center>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { placeholder = "Phone", autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </center>
                        </div>

                        <div class="bottom">
                            <button class="btn">Register</button>
                        </div>
                        <div class="links">
                            <p><a href="Login">Login</a></p>
                            <div class="clear"></div>
                        </div>

                    </div>
                    
                </div>

                <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

            </div>
           
        </div>
    <!-- //main -->
        

    }
</body>
</html>

